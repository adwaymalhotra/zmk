/ {
  combos {
    compatible = "zmk,combos";
    // top row
    c_tilde {
      timeout-ms = <40>;
      key-positions = <1 2>;
      bindings = <&kp TILDE>;
    };
    c_grave {
      timeout-ms = <40>;
      key-positions = <2 3>;
      bindings = <&kp GRAVE>;
    };
    c_eql {
      timeout-ms = <40>;
      key-positions = <6 7>;
      bindings = <&kp EQUAL>;
    };
    c_plus {
      timeout-ms = <40>;
      key-positions = <7 8>;
      bindings = <&kp PLUS>;
    };
    // home row
    c_bsp {
      timeout-ms = <40>;
      key-positions = <11 12>;
      bindings = <&kp BSPC>;
    };
    c_esc {
      timeout-ms = <40>;
      key-positions = <12 13>;
      bindings = <&kp ESC>;
    };
    c_tab {
      timeout-ms = <40>;
      key-positions = <16 17>;
      bindings = <&kp TAB>;
    };
    c_del {
      timeout-ms = <40>;
      key-positions = <17 18>;
      bindings = <&kp DEL>;
    };
    // bottom row [{( )}]
    c_lpar {
      timeout-ms = <40>;
      key-positions = <23 24>;
      bindings = <&kp LPAR>;
    };
    c_lbrc {
      timeout-ms = <40>;
      key-positions = <22 23>;
      bindings = <&kp LBRC>;
    };
    c_lbkt {
      timeout-ms = <40>;
      key-positions = <21 22>;
      bindings = <&kp LBKT>;
    };
    c_rpar {
      timeout-ms = <40>;
      key-positions = <25 26>;
      bindings = <&kp RPAR>;
    };
    c_rbrc {
      timeout-ms = <40>;
      key-positions = <26 27>;
      bindings = <&kp RBRC>;
    };
    c_rbkt {
      timeout-ms = <40>;
      key-positions = <27 28>;
      bindings = <&kp RBKT>;
    };
  };
};
